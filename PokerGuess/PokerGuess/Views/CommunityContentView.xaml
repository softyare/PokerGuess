<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokerGuess.Views.CommunityContentView">
  <ContentView.Content>
        <StackLayout HorizontalOptions="FillAndExpand" 
                             VerticalOptions="FillAndExpand"
                             BackgroundColor="DarkGreen"
                             MinimumWidthRequest="150"
                             WidthRequest="150"
                             Orientation="Horizontal">
            <Image Source="{Binding Flop1}" 
                               WidthRequest="24"
                               Aspect="AspectFit"
                               Margin="5,5,1,5"
                               HorizontalOptions="Start"
                                VerticalOptions="Start"/>
            <Image Source="{Binding Flop2}" 
                               WidthRequest="24"
                               Aspect="AspectFit"
                               Margin="1,5,1,5"
                               HorizontalOptions="Start"
                                VerticalOptions="Start"/>
            <Image Source="{Binding Flop3}" 
                               WidthRequest="24"
                               Aspect="AspectFit"
                               Margin="1,5,1,5"
                               HorizontalOptions="Start"
                                VerticalOptions="Start"/>
            <Image Source="{Binding Turn}" 
                               WidthRequest="24"
                               Aspect="AspectFit"
                               Margin="1,5,1,5"
                               HorizontalOptions="Start"
                                VerticalOptions="Start"/>
            <Image Source="{Binding River}" 
                               WidthRequest="24"
                               Aspect="AspectFit"
                               Margin="1,5,5,5"
                               HorizontalOptions="Start"
                                VerticalOptions="Start"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>