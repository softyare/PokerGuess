<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokerGuess.Views.GamePage"
             xmlns:views="clr-namespace:PokerGuess.Views"
             Padding="5,15,5,5">
    <ContentPage.Content>
        <StackLayout x:Name="MainTableLayout"
                     BackgroundColor="ForestGreen" 
                     Padding="10" 
                     Orientation="Vertical"
                     >
            <StackLayout VerticalOptions="Start" Orientation="Horizontal">
                <Button Text="Hands" Command="{Binding DealNewRandomHandsCommand}" BackgroundColor="Wheat"/>
                <Button Text="Flop" Command="{Binding DealFlopCommand}" BackgroundColor="Yellow"/>
                <Button Text="Trun" Command="{Binding DealTurnCommand}" BackgroundColor="Green"/>
                <Button Text="River" Command="{Binding DealRiverCommand}" BackgroundColor="Red"/>
            </StackLayout>
            <views:TableContentView x:Name="TableCV" VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>